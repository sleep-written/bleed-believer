{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "composite": true,

        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        
        "strict": true,
        "removeComments": false,
        "moduleResolution": "node",
        "verbatimModuleSyntax": true,

        "declaration": true,
    },
    "exclude": [
        "./packages/*/dist",
        "./**/*.example.ts",
        "./**/*.test.ts",
        "./examples/*"
    ]
}