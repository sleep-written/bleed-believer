{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "esModuleInterop": true,
        "moduleResolution": "Node16",
        
        "strict": true,
        "skipLibCheck": true,
        "verbatimModuleSyntax": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        
        "sourceMap": false,
        "declaration": true,
        "removeComments": false
    }
}