{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [ "^build" ],
            "cache": false
        },
        "watch": {
            "persistent": true,
            "dependsOn": [ "clean", "build" ],
            "cache": false
        },
        "clean": {
            "dependsOn": [ "^clean" ],
            "cache": false
        },
        "test": {
            "cache": false
        },
        "start": {
            "cache": false
        }
    }
}