{
    "compilerOptions": {
        "strict": true,
        "target": "ES2022",
        "module": "ES2022",

        "verbatimModuleSyntax": true,
        "moduleResolution": "Node16",
        "esModuleInterop": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,

        "baseUrl": ".",
        "paths": {
            "@test/*": [ "./test/*" ],
            "@app/*": [ "./app/*" ]
        }
    }
}