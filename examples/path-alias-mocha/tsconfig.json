{
    "compilerOptions": {
        "strict": true,
        "target": "ES2022",
        "module": "ES2022",

        "verbatimModuleSyntax": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "outDir": "./dist",

        "baseUrl": ".",
        "paths": {
            "@test/*": [ "./test/*" ],
            "@app/*": [ "./app/*" ]
        }
    }
}