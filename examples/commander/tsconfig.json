{
    "compilerOptions": {
        "target": "ES2024",
        "module": "node20",
        "moduleResolution": "node16",

        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowImportingTsExtensions": true,
        "rewriteRelativeImportExtensions": true,

        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./src",
        "sourceMap": true,

        "paths": {
            "@/*": [ "./*" ]
        }
    }
}