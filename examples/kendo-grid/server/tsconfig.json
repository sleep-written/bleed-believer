{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        
        "verbatimModuleSyntax": true,
        "moduleResolution": "Node16",
        "esModuleInterop": true,
        "strict": true,

        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./dist",

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "baseUrl": "./src",
        "paths": {
            "@entities/*": [ "./entities/*" ],
            "@tool/*": [ "./tool/*" ],
            "@/*": [ "./*" ]
        }
    }
}