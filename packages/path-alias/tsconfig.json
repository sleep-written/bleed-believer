{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "emitDeclarationOnly": true,

        "rootDir": "./src",
        "outDir": "./dist",

        "baseUrl": "./src",
        "paths": {
            "@tool/*": [ "./tool/*" ],
            "@/*": [ "./*" ]
        }
    },
    "exclude": [
        "./dist",
        "./example",
        "./src/**/*.fake.ts",
        "./src/**/*.mock.ts",
        "./src/**/*.test.ts"
    ]
}